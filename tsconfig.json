{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "strict": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "target": "es2015",
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "moduleResolution": "node"
    },
    "include": [
        "src/**/*",
        "test/**/*"
    ]
}
